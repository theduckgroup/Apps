{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}